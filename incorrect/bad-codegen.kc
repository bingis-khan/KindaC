use Term
use Mem
	Allocator(allocate, free)
	Slice
	offset-ptr
	addresses
use Iter
	range
	zip


set-ptr-value (p Ptr a, x a) -> Unit
	p <&= x
	return

al = Mem.get-c-allocator()
xs = al allocate(3) as Slice Int

xs addresses() Iter.for-each(p: set-ptr-value(p, 0))
xs zip(range(10, 20)) Iter.for-each(Term.println)
al free(xs)
